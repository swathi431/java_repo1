pipeline{
	agent SlaveLabel
	stages {
  		stage('Git Checkout') {
    			steps {
      				checkout([$class: 'GitSCM', branches: [[name: '*/master']], extensions: [], userRemoteConfigs: [[credentialsId: 'ubuntuId', url: 'https://github.com/swathi431/java_repo1']]])
    			}
  		}

  		stage('Build') {
   			 steps {
				cd /home/ubuntu/Ass_jenkins/workspace/pipeline_assign
      				 mvn clean install
    			}
  		}

  		stage('Deploy') {
   			 steps {
      			sh 'cp *.war /opt/apache-tomcat-9.0.55/webapps/'
   			 }
 		 }

	}
}
